<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".UserResetPasswordActivity">
    <RelativeLayout
        android:id="@+id/reset_password_relativelayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <LinearLayout
            android:id="@+id/reset_password_linearlayout1"
            android:layout_marginTop="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView_old_password_tag"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="20sp"
                android:text="Old Password:" />

            <TextView
                android:id="@+id/textView_new_password_tag"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="55dp"
                android:textSize="20sp"
                android:text="New Password:" />

            <TextView
                android:id="@+id/textView_new_password_confirm_tag"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="20sp"
                android:layout_marginTop="40dp"
                android:text="Comfirm:" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_toEndOf="@id/reset_password_linearlayout1"
            android:orientation="vertical">


            <EditText
                android:id="@+id/editText_old_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ems="10"
                android:inputType="textPassword"
                android:text="Name" />

            <EditText
                android:id="@+id/editText_new_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"

                android:layout_marginTop="40dp"
                android:ems="10"
                android:inputType="textPassword"
                android:text="Name" />

            <EditText
                android:id="@+id/editText_new_password_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:singleLine="true"
                android:ems="10"
                android:inputType="textPassword"
                android:text="Name" />


        </LinearLayout>









    </RelativeLayout>
    <LinearLayout
        android:id="@+id/reset_password_linearlayout_mid"
        android:layout_below="@+id/reset_password_relativelayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bnv"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/textView_reset_password_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="45dp"
            android:textSize="30sp"
            android:text="Please Reset" />

        <Button
            android:id="@+id/button_save_reset_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save" />


    </LinearLayout>




    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bnv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/navigator_menu"/>

</RelativeLayout>