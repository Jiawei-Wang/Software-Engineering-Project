<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_course"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="5dp"
        app:cardMaxElevation="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/relativeLayout_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="vertical">
                <TextView
                    android:id="@+id/textview_course_id_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cour ID: "
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/textview_course_teacher_id_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textview_course_id_tag"
                    android:layout_marginTop="13dp"
                    android:text="Facul ID: "
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/editText_course_name_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textview_course_teacher_id_tag"
                    android:layout_marginTop="13dp"
                    android:text="Name: "
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/editText_course_status_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/editText_course_name_tag"
                    android:layout_marginTop="20dp"

                    android:text="Status: "
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/editText_class_number_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/editText_course_status_tag"
                    android:layout_marginTop="20dp"
                    android:text="Num: "
                    android:textSize="15sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/relativeLayout_tag"
                android:layout_marginLeft="20dp"
                android:orientation="vertical"

                >
                <TextView
                    android:id="@+id/textview_course_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Courseid"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textview_course_teacher_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textview_course_id"
                    android:layout_marginTop="13dp"
                    android:text="Teacherid"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/editText_course_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textview_course_teacher_id"
                    android:singleLine="true"
                    android:text="CourseName"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/editText_course_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/editText_course_name"
                    android:singleLine="true"
                    android:text="CourseStatus"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/editText_class_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/editText_course_status"
                    android:singleLine="true"
                    android:text="ClassNumber"
                    android:textSize="15sp" />

            </LinearLayout>




            <Button
                android:id="@+id/button_edit_course_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout_tag"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:minHeight="0dp"
                android:text="Reset" />

            <Button
                android:id="@+id/button_edit_course_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/button_edit_course_reset"
                android:layout_below="@+id/relativeLayout_tag"
                android:layout_marginTop="10dp"
                android:minHeight="0dp"
                android:text="Save" />

            <Button
                android:id="@+id/button_delete_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_edit_course_reset"
                android:minHeight="0dp"
                android:text="Delete" />

            <Button
                android:id="@+id/button_enroll_student"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_edit_course_reset"
                android:layout_toRightOf="@+id/button_delete_course"
                android:minHeight="0dp"
                android:text="Enroll" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>